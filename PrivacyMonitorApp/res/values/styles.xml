<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppStyle.Common" />

    <style name="AppStyle.Common.Hint">
        <item name="android:textColor">@color/color_88888888</item>
    </style>

    <style name="AppStyle.Common.EmptyListHint" parent="AppStyle.Common.Hint">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_88888888</item>
        <item name="android:textSize">@dimen/textsize_16</item>
    </style>

    <style name="AppStyle.Common.Btn">
        <item name="android:layout_width">fill_parent</item>
        <!-- <item name="android:layout_height">@dimen/main_btn_height</item> -->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/spacing_10</item>
        <item name="android:background">@drawable/button_seletor</item>
        <item name="android:textSize">@dimen/textsize_20</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppStyle.Common.InputEdit">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/common_input_height</item>
        <item name="android:paddingLeft">@dimen/common_padding</item>
        <item name="android:paddingRight">@dimen/common_padding</item>
        <item name="android:background">@drawable/text_shape</item>
        <item name="android:textSize">@dimen/textsize_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- styles for Login module -->
    <style name="AppStyle.Login" />

    <style name="AppStyle.Common.Title">
        <item name="android:textSize">@dimen/main_title_textsize</item>
        <item name="android:textColor">@color/appbase_blue</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppStyle.Common.Title.Large">
        <item name="android:textSize">@dimen/main_title_textsize_large</item>
    </style>

    <style name="AppStyle.Login.Input" parent="AppStyle.Common.InputEdit">
        <item name="android:layout_height">@dimen/login_input_height</item>
    </style>

    <style name="AppStyle.Login.Input.Username">
        <item name="android:inputType">number</item>
        <item name="android:digits">@string/login_input_digits</item>
        <item name="android:hint">@string/login_username_hint</item>
    </style>

    <style name="AppStyle.Login.Input.Checkcode">
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/login_checkcode_hint</item>
    </style>

    <style name="AppStyle.Login.Input.Password">
        <item name="android:inputType">textPassword</item>
        <item name="android:password">true</item>
    </style>

    <style name="AppStyle.Login.Submit">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/login_button_height</item>
        <item name="android:background">@drawable/button_seletor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textsize_24</item>
    </style>

    <style name="AppStyle.Login.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_16</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- styles for index -->
    <style name="AppStyle.MainIndex" />

    <style name="AppStyle.MainIndex.TopHint" parent="AppStyle.Common.Hint">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_18</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="AppStyle.MainIndex.Warning" parent="AppStyle.Common.Hint">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_18</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <!-- styles for main module -->
    <style name="AppStyle.Main" />

    <style name="AppStyle.Main.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/main_title_height</item>
        <item name="android:textSize">@dimen/main_title_textsize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppStyle.Main.Sub">
        <item name="android:textSize">@dimen/textsize_16</item>
        <item name="android:textColor">@color/dark_red</item>
        <item name="android:singleLine">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="AppStyle.Main.SubHint">
        <item name="android:textSize">@dimen/main_title_textsize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="AppStyle.Main.Person">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/main_title_height</item>
        <item name="android:textSize">@dimen/main_title_textsize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    
    <style name="AppStyle.Bind">
        
    </style>
    
    <style name="AppStyle.Bind.HintTextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textSize">@dimen/textsize_18</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
    <style name="AppStyle.Bind.ValueTextAppearance">
        <item name="android:textColor">@color/appbase_blue</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textSize">@dimen/textsize_16</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>
