<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/translucent"
    android:orientation="vertical" >

    <!-- 消息设置 标题 -->

    <TextView
        android:id="@+id/custom_dialog_title_tv"
        style="@style/DialogTitleStyle"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_dialog_title_height"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:background="@color/white"
        android:text="设置标题" />

    <RelativeLayout
        android:id="@+id/custom_dialog_content_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:background="@color/white"
        android:gravity="center" >

        <TextView
            android:id="@+id/custom_dialog_content_tv"
            style="@style/DialogContentStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:minHeight="@dimen/common_dialog_content_minheight" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:background="@color/black" />

    <LinearLayout
        android:id="@+id/custom_dialog_buttons_rl"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_dialog_btn_height"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:background="@color/translucent"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/custom_dialog_confirm_bt"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="@string/confirm" />

        <View
            android:layout_width="0.5dip"
            android:layout_height="fill_parent"
            android:background="@color/black" />

        <Button
            android:id="@+id/custom_dialog_cancel_bt"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="@string/cancel" />
    </LinearLayout>

</LinearLayout>