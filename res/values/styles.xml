<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
<!-- styles for Login module -->
    <style name="AppStyle.Login"/>
    <style name="AppStyle.Login.Input">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/login_input_height</item>
        <item name="android:background">@drawable/login_inputbox</item>
        <item name="android:paddingLeft">@dimen/common_padding</item>
        <item name="android:paddingRight">@dimen/common_padding</item>
        <item name="android:textSize">@dimen/textsize_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="AppStyle.Login.Input.Username">
        <item name="android:inputType">text</item>
        <item name="android:digits">@string/login_input_digits</item>
        <item name="android:hint">@string/login_username_hint</item>
    </style>
    <style name="AppStyle.Login.Input.Password">
        <item name="android:inputType">textPassword</item>
        <item name="android:password">true</item>
        <item name="android:hint">@string/login_password_hint</item>
    </style>
    <style name="AppStyle.Login.Submit">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/login_button_height</item>
        <item name="android:background">@drawable/login_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textsize_20</item>
        <item name="android:text">@string/login_submit</item>
    </style>
    
    
    <!-- styles for Login module -->
    <style name="AppStyle.Main"/>
    <style name="AppStyle.Main.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/main_title_height</item>
        <item name="android:textSize">@dimen/main_title_textsize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="AppStyle.Main.Sub">
        <item name="android:textSize">@dimen/textsize_16</item>
        <item name="android:textColor">@color/dark_red</item>
        <item name="android:singleLine">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
    <style name="AppStyle.Main.SubHint">
        <item name="android:textSize">@dimen/main_title_textsize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>
    <style name="AppStyle.Main.Person">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/main_title_height</item>
        <item name="android:textSize">@dimen/main_title_textsize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="AppStyle.Main.Btn">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/main_btn_height</item>
        <item name="android:background">@drawable/main_button</item>
        <item name="android:textSize">@dimen/textsize_20</item>
        <item name="android:textColor">@color/white</item>
    </style>
    

</resources>